              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Don't overload the Action Ribbon",
                          "type": "text",
                          "marks": [
                            {
                              "type": "bold"
                            }
                          ]
                        },
                        {
                          "text": " with too many actions, which can overwhelm users and dilute the importance of primary actions.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Don't mix action types",
                          "type": "text",
                          "marks": [
                            {
                              "type": "bold"
                            }
                          ]
                        },
                        {
                          "text": " that aren't related, as this can confuse users about the expected outcomes of their interactions.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
